        "custom/dynamicisle"
    ],
    "modules-right": [
        "idle_inhibitor",
        "pulseaudio",
        "network",
        "cpu",
        "memory",
        "backlight",
        "battery",
        "clock"
    ],
    "hyprland/workspaces": {
        "disable-scroll": false, 
        "active-workspace-color": "#ff79c6",
        "default-workspace-color": "#6272a4",
        "persistent-workspaces": {
            "*": 5 // 5 workspaces by default on every monitor
       }
      
